@model IEnumerable<Product>
@foreach (var product in Model)
                            {

                    <div class="col-xl-3 col-md-4 col-sm-6">
                      <div class="product-item">
                        <div class="product-img">
                          <a href="shop.html">
                            <img
                              class="primary-img"
                              src="~/assets/images/product/@product.ProductImages?.FirstOrDefault(pi=>pi.IsCover==true)?.ImageUrl"
                              alt="Product Images"
                            />
                            @if ((product.ProductImages?.Count(pi=>pi.IsCover==false) >0))
                            {
                                <img
                                    class="secondary-img"
                                    src="~/assets/images/product/@product.ProductImages?.FirstOrDefault(pi=>pi.IsCover==false)?.ImageUrl"
                                />
                            }
                          </a>
                          <div class="product-add-action">
                            <ul>
                              <li>
                                <a
                                  href="wishlist.html"
                                  data-tippy="Add to wishlist"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-like"></i>
                                </a>
                              </li>
                              <li
                                class="quuickview-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#partialModal";
                              >
                                <a       
                                    class="mm"
                                    prodid = "@product.Id"
                                    asp-action="QuickView"
                                    asp-route-id = "@product.Id"
                                    id="modall"
                                  data-tippy="Quickview"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-look"></i>
                                </a>
                              </li>
                              <li>
                                <a
                                    asp-controller="Home"
                                    asp-action="AddBasket"
                                    asp-route-id="@product.Id"
                                  data-tippy="Add to cart"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-cart"></i>
                                </a>
                              </li>
                            </ul>
                          </div>
                        </div>
                        <div class="product-content">
                          <a class="product-name" href="shop.html"
                            >@product.Name</a
                          >
                          <div class="price-box pb-1">
                            <span class="new-price">$@product.SellPrice</span>
                          </div>
                          <div class="rating-box">
@*                            <ul>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                            </ul>*@
                          </div>
                        </div>
                      </div>
                    </div>     
}
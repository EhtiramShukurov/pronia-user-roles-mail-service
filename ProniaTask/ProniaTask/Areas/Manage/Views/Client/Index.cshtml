@model ICollection<Client>
<div class="container">
	<div class="card mt-5">
		<div class="table-responsive">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Id</th>
						<th>Img</th>
						<th>Name</th>
						<th>Surname</th>
						<th>Occupation</th>
						<th>Comment</th>
						<th colspan="2">Operation</th>
					</tr>
				</thead>
				<tbody>
					@foreach (Client c in Model)
					{
					<tr>
						<td>@c.Id</td>
						<td><img width="40" src="~/assets/images/website-images/@c.ImageUrl"></td>
						<td>@c.Name</td>
						<td>@c.Surname</td>
						<td>@c.Occupation</td>
						<td>@c.Comment</td>
						<td><a class="btn btn-danger" asp-area="Manage" asp-controller="Client" asp-action="Delete" asp-route-id="@c.Id">Delete</a></td>
						<td><a class="btn btn-info" asp-area="Manage" asp-controller="Client" asp-action="Update" asp-route-id="@c.Id">Update</a></td>
					</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>